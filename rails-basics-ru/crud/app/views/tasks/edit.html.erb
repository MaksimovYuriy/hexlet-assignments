<h1> Edit Task </h1>

<%= form_with model: @task do |form| %>
    <div>
        <%= form.label :name %>
        <br>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :description %>
        <br>
        <%= form.text_field :description %>
    </div>
    <div>
        <%= form.label :creator %>
        <br>
        <%= form.text_field :creator %>
    </div>
    <div>
        <%= form.label :status %>
        <br>
        <%= form.text_field :status %>
    </div>
    <div>
        <%= form.label :completed %>
        <br>
        <%= form.text_field :completed %>
    </div>
    <div>
        <br>
        <%= form.submit %>
    </div>
<% end %>